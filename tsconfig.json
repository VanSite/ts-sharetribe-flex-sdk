{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "ignoreDeprecations": "5.0",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "plugins": [{
      "name": "next"
    }],
    "typeRoots": [
      "./node_modules/@types",
      "./src/app/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"] // Exclude generated output folders
}
