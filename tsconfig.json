{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "ignoreDeprecations": "5.0",
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{
      "name": "next"
    }],
    "typeRoots": [
      "./node_modules/@types",
      "./src/app/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
